---
import '../styles/global.css';
import Sidebar from '../components/Sidebar.astro';

interface Props {
	title?: string;
	description?: string;
}

const { pathname } = Astro.url;

const { title, description } = Astro.props;
const pageTitle = title ? `LBRY Statistics - ${title}` : 'LBRY Statistics';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />

		<!-- HTML Meta Tags -->
		<meta name="description" content={description}>
		<meta name="theme-color" content="#f9d75e" />

		<!-- Facebook Meta Tags -->
		<meta property="og:url" content={"https://stats.lbry.pigg.es" + pathname}>
		<meta property="og:type" content="website">
		<meta property="og:title" content={pageTitle}>
		<meta property="og:description" content={description}>
		<meta property="og:image" content="https://stats.lbry.pigg.es/assets/banner.png">

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta property="twitter:domain" content="stats.lbry.pigg.es">
		<meta property="twitter:url" content={"https://stats.lbry.pigg.es" + pathname}>
		<meta name="twitter:title" content={pageTitle}}>
		<meta name="twitter:description" content={description}>
		<meta name="twitter:image" content="https://stats.lbry.pigg.es/assets/banner.png">

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<Sidebar/>
		<main><div class="wrapper"><slot /></div></main>
	</body>
</html>
<style is:global>
	
</style>
