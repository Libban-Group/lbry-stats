<style>
    header {
        position: fixed;
        top: 0;
        left: 0;
        display: flex;
        flex-direction: column;
        width: 300px;
        height: 100vh;
        box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
        background-color: var(--dim1);
        transition: transform 300ms;
    }

    .hide-sidebar {
        transform: translateX(calc(-100% + 60px));
    }

    .hide-sidebar #menu {
        transform: rotate(180deg);
    }

    .box {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 20px;
        height: 100%;
    }

    .box .top {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .box .nav {
        display: flex;
        justify-content: space-between;
    }

    .box .nav select {
        font-size: 1.25rem;
        color: var(--primary);
        border: none;
        background-color: transparent;
    }

    .box .nav #menu {
        width: 1.5rem;
        fill: var(--primary);
        transition: transform 100ms;
        cursor: pointer;
    }

    .title {
        display: flex;
        gap: 20px;
        justify-content: center;
        text-decoration: none;
    }

    .title .name {
        font-size: 3rem;
    }

    .section input {
        display: none;
    }

    .section .toggleSection {
        display: flex;
        justify-content: space-between;
        align-items: center;
        cursor: pointer;
    }

    #theme {
        visibility: hidden;
    }

    #toggleSection1:not(:checked) ~ label svg, #toggleSection2:not(:checked) ~ label svg {
        transform: rotate(180deg);
    }

    #toggleSection1:not(:checked) ~ ul, #toggleSection2:not(:checked) ~ ul {
        display: none;
    }

    .section {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin: 0 10px;
    }

    .section .title {
        /* font-weight: bold; */
        font-size: 1.25rem;
    }

    .section ul {
        padding: 0 10px;
    }

    .section ul li {
        width: calc(100% - 40px);
        list-style: none;
        padding: 10px 20px;
        border-radius: 10px;
    }

    .section ul li:hover {
        background-color: rgba(0, 0, 0, 0.25);
    }

    .section ul li a {
        display: block;
        color: var(--primary);
        text-decoration: none;
    }

    .section ul li.active {
        background-color: rgba(0, 0, 0, 0.25);
    }

    .section ul li.active a {
        font-weight: bold;
        background: var(--brand-gradient);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .bottom {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .bottom .links {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .bottoms .links a {
        text-decoration: none;
    }

    .bottom .links svg {
        width: 30px;
        fill: var(--primary);
    }
</style>
<script>
    const sidebar = document.querySelector('header');
    document.querySelector('#menu').addEventListener('click', (e)=>{
        sidebar.classList.toggle('hide-sidebar');
        //e.target.ro
    });
</script>